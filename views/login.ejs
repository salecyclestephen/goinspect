<%- include('partials/header') %>
<div class="container">

	<div class="row">
		<h1 style="text-align: center;">Login to the fun....</h3>

		<!-- 30% of the container and zero on the top and bottom and auto left and right -->
		<div style="width: 30%; margin: 25px auto;">
			<form method="POST" action="/login">
				<!-- from-group > creates a group and gives the elements space -->
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="username" required="true">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="password" required="true">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Login</button>
				<!-- ^^ btn-block makes it a blocked element -->
				</div>
			</form>
		</div>
	</div>

	<%- include('partials/footer') %>
</div>